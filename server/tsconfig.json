{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "es2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"],
  "include": ["src"]
}
