{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "es2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "types": ["node", "jest"],
    "paths": {
      "tsoa": ["../node_modules/tsoa/dist"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
