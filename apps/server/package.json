{
  "name": "@refugies-info/server",
  "version": "0.1.0",
  "description": "Plateforme dédiée aux réfugiés",
  "author": "Soufiane Lamrissi",
  "homepage": "https://refugies.info",
  "copyright": "Copyright 2019 DiAiR",
  "license": "MIT",
  "main": "server.js",
  "scripts": {
    "build": "yarn gen:tsoa && tsc",
    "check:types": "yarn gen:tsoa && tsc --noEmit",
    "dev": "yarn build && concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "gen:tsoa": "tsoa spec-and-routes",
    "lint": "eslint . --ext ts,tsx,js --quiet --cache",
    "lint:fix": "eslint --fix",
    "pr:prod": "gh pr create -B master-backend -H staging-backend -l release -t '[PROD-BACK] Release' -b ''",
    "pr:stg": "gh pr create -B staging-backend -H dev -l release -t '[STG-BACK] Release' -b ''",
    "start": "node dist/src/apps/server.js",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "@azure/msal-node": "^2.6.2",
    "@google-cloud/translate": "^8.3.0",
    "@refugies-info/api-types": "*",
    "@sendgrid/mail": "^8.1.3",
    "@sendinblue/client": "^3.2.2",
    "@slack/webhook": "^7.0.1",
    "@typegoose/typegoose": "^12.0.0",
    "airtable": "^0.12.2",
    "algoliasearch": "^4.14.2",
    "cloudinary": "^2.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "expo-server-sdk": "^3.6.0",
    "express": "^4.16.4",
    "express-form-data": "^2.0.18",
    "google-auth-library": "^9.4.2",
    "jwt-simple": "^0.5.5",
    "lodash": "^4.17.21",
    "microsoft-cognitiveservices-speech-sdk": "^1.25.1",
    "moment": "^2.29.4",
    "mongodb": "^6.8.0",
    "mongoose": "8.5.0",
    "node-cache": "^5.1.2",
    "password-hash": "^1.2.2",
    "ts-node": "^10.9.2",
    "tsoa": "^5.1.1",
    "twilio": "^5.2.0",
    "uniqid": "^5.0.3",
    "uuid": "^10.0.0",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@refugies-info/typescript-config": "*",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.9",
    "@types/express-form-data": "^2.0.2",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.182",
    "@types/mongoose": "^5.10.1",
    "@types/node": "^20.14.9",
    "@types/password-hash": "^1.2.20",
    "@types/uniqid": "^5.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-turbo": "^2.0.9",
    "jest": "^29.7.0",
    "mockdate": "^3.0.5",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.2.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": "20.13.1",
    "yarn": "1.22.22"
  },
  "volta": {
    "node": "20.13.1",
    "yarn": "1.22.22"
  }
}
