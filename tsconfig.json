{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "allowJs": false,
    "paths": {
      // see fix https://github.com/facebook/react/issues/24304#issuecomment-1111184798
      "react": ["./node_modules/@types/react"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "react-native.config.js",
    "rn-cli.config.js",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
