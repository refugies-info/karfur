{
  "alias-tool.mappings": {
    "~scss": "${workspace}/apps/client/src/scss"
  },
  "scss.lint.unknownAtRules": "ignore",
  "eslint.workingDirectories": ["./apps/client", "./apps/server"],
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "conventionalCommits.scopes": ["api-types", "client", "server", "mobile"],
  // i18n-ally
  "i18n-ally.extract.autoDetect": false,
  "i18n-ally.localesPaths": ["apps/client/src/locales", "apps/mobile/src/translations"],
  "i18n-ally.ignoreFiles": ["**/unused.json"],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.keysInUse": [
    "StructureType.*",
    "StructureActivities.*",
    "StructureActivities.Coaching / Suivi dans l'emploi",
    "StructureDay.*",
    "callout_*",
    "Dispositif.section*",
    "Filters.*",
    "Infocards.*",
    "Recherche.demarcheExample*",
    "Recherche.dispositifExample*",
    "Register.criteria_*",
    "Roles.*",
    "Status.*",
    "LanguageDropdown.*",
    "LanguageDropdown.en_persan/dari",
    "Translate.medium",
    "Translate.strong",
    "Translate.weak"
  ],
  "i18n-ally.dirStructure": "auto",
  "i18n-ally.enabledFrameworks": ["i18next", "react-i18next"],
  "i18n-ally.extract.keygenStyle": "snake_case",
  "i18n-ally.displayLanguage": "fr",
  "i18n-ally.extract.ignoredByFiles": {},
  "i18n-ally.pathMatcher": "{locale}/common.json",
  // prettier
  "prettier.configPath": ".prettierrc",
  // Github
  "githubPullRequests.fileListLayout": "flat",
  "githubPullRequests.pullBranch": "never",
  "githubIssues.issueBranchTitle": "feat/#${issueNumber}-${sanitizedIssueTitle}",
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.format.semicolons": "insert",
  "files.insertFinalNewline": true,
  "stylelint.validate": ["css", "scss"],
  "css.customData": [".vscode/tailwind.json"]
}
