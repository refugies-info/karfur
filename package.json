{
  "private": true,
  "name": "karfur",
  "version": "0.1.0",
  "description": "Plateforme dédiée aux réfugiés",
  "author": "Soufiane Lamrissi",
  "homepage": "https://accueil-integration-refugies.fr",
  "copyright": "Copyright 2019 DiAiR",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "patch-package",
    "clean:branches": "npx git-removed-branches --prune --force",
    "build": "yarn turbo build",
    "build:api-types": "yarn turbo build --filter=@refugies-info/api-types",
    "build:client": "yarn turbo build --filter=@refugies-info/client",
    "build:server": "yarn turbo build --filter=@refugies-info/server",
    "build:mobile": "yarn turbo build --filter=@refugies-info/mobile",
    "check:dependency-version-consistency": "yarn check-dependency-version-consistency .",
    "check:types": "yarn turbo check:types",
    "check:types:api-types": "yarn turbo check:types --filter=@refugies-info/api-types",
    "check:types:client": "yarn turbo check:types --filter=@refugies-info/client",
    "check:types:server": "yarn turbo check:types --filter=@refugies-info/server",
    "check:types:mobile": "yarn turbo check:types --filter=@refugies-info/mobile",
    "dev": "yarn turbo dev",
    "dev:client": "yarn turbo dev --filter=@refugies-info/client",
    "dev:server": "yarn turbo dev --filter=@refugies-info/server",
    "dev:mobile": "yarn turbo dev --filter=@refugies-info/mobile",
    "prebuild": "react-dsfr update-icons --projectDir ./apps/client",
    "predev": "react-dsfr update-icons --projectDir ./apps/client",
    "start": "yarn turbo start",
    "start:client": "yarn workspace @refugies-info/client start",
    "start:server": "yarn workspace @refugies-info/server start",
    "start:mobile": "yarn workspace @refugies-info/server mobile",
    "test": "yarn turbo test",
    "test:client": "yarn turbo test --filter=@refugies-info/client",
    "test:client:update-snapshots": "yarn workspace @refugies-info/client test -u",
    "test:server": "yarn turbo test --filter=@refugies-info/server",
    "test:mobile": "yarn turbo test --filter=@refugies-info/mobile",
    "test:mobile:update-snapshots": "yarn workspace @refugies-info/mobile test -u",
    "lint": "yarn turbo lint",
    "lint:api-types": "yarn turbo lint --filter=@refugies-info/api-types",
    "lint:client": "yarn turbo lint --filter=@refugies-info/client",
    "lint:server": "yarn turbo lint --filter=@refugies-info/server",
    "lint:mobile": "yarn turbo lint --filter=@refugies-info/mobile",
    "lint:style": "yarn stylelint \"**/*.css\" \"**/*.scss\"",
    "pr:prod:client": "gh pr create -B master-frontend -H staging-frontend -l release -t '[PROD-FRONT] Release' -b ''",
    "pr:stg:client": "gh pr create -B staging-frontend -H dev -l release -t '[STG-FRONT] Release' -b ''",
    "pr:prod:server": "gh pr create -B master-backend -H staging-backend -l release -t '[PROD-BACK] Release' -b ''",
    "pr:stg:server": "gh pr create -B staging-backend -H dev -l release -t '[STG-BACK] Release' -b ''",
    "prepare": "husky",
    "migrate": "ts-node migrations/cli.ts"
  },
  "dependencies": {},
  "engines": {
    "node": "20.13.1",
    "yarn": "1.22.22"
  },
  "devDependencies": {
    "check-dependency-version-consistency": "^4.1.0",
    "dotenv": "^16.4.5",
    "husky": ">=6",
    "lint-staged": ">=10",
    "mongo-migrate-ts": "^1.6.2",
    "mongodb": "^6.8.0",
    "patch-package": "^8.0.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "stylelint": "^16.8.2",
    "stylelint-config-standard-scss": "^13.1.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.9"
  },
  "packageManager": "yarn@1.2.22",
  "volta": {
    "node": "20.13.1",
    "yarn": "1.22.22"
  },
  "lint-staged": {
    "*.{css,scss}": "stylelint --fix",
    "*.{js,jsx,ts,tsx}": "prettier --write"
  }
}
