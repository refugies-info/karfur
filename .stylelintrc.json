{
  "extends": "stylelint-config-standard-scss",
  "overrides": [
    {
      "files": [
        "**/*.scss"
      ],
      "customSyntax": "postcss-scss"
    }
  ],
  "rules": {
    "selector-class-pattern": "^[a-z]+(-[a-z0-9]+)*$|^[a-z]+(_[a-z0-9]+)*$|^[a-z][a-zA-Z0-9]*$",
    "scss/dollar-variable-pattern": "^[a-z]+(-[a-z0-9]+)*$|^[a-z]+(_[a-z0-9]+)*$|^[a-z][a-zA-Z0-9]*$",
    "scss/at-mixin-pattern": "^[a-z]+(-[a-z0-9]+)*$|^[a-z]+(_[a-z0-9]+)*$|^[a-z][a-zA-Z0-9]*$",
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "export",
          "import",
          "global",
          "local",
          "external"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "composes",
          "compose-with"
        ],
        "ignoreSelectors": [
          ":export",
          "^:import"
        ]
      }
    ]
  }
}
